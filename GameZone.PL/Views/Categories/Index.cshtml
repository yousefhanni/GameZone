 @model IEnumerable<GameZone.PL.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

<div class="d-flex justify-content-start">
    <a class="btn btn-add-category mt-2" asp-action="Create">
        <i class="bi bi-plus-circle-dotted"></i> Add Category
    </a>
</div>

<table class="table mt-4">
    <thead>
        <tr>
            <th>Name</th>
            <th>Number of Games</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.GameCount</td> <!-- Display GameCount here -->
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
