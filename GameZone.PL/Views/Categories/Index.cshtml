 @model IEnumerable<GameZone.PL.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "Categories";
}

<h2 class="mt-4">Categories</h2>

<div class="d-flex justify-content-start mb-3">
    <a class="btn btn-primary btn-lg" asp-action="Create">
        <i class="bi bi-plus-circle-dotted me-1"></i> Add Category
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">No categories!</h4>
        <p>No categories have been added yet.</p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered mt-4">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Number of Games</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.GameCount</td>
                        <td class="d-flex justify-content-center">
                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning me-2">
                                <i class="bi bi-pencil me-1"></i> Edit
                            </a>
                            <button class="btn btn-sm btn-danger js-delete" data-id="@category.Id" data-type="Categories" data-name="Category">
                                <i class="bi bi-trash me-1"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts
{
    <script src="~/js/games-delete.js" asp-append-version="true"></script>
}
